<% title "Photos" %>

<table>
  <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Published</th>
  </tr>
  <% for photo in @photos %>
    <tr>
      <td><%= photo.title %></td>
      <td><%= link_to image_tag(photo.image.url(:micro)), photo.image.url(:large), :class => 'fancy', :rel => 'photo_group' %></td>
      <td><%= link_to photo.published.to_s, toggle_published_photo_path(photo), :method => :put, :class => photo.published.to_s %></td>
      <td>
        <%= link_to "Show", photo %> | 
        <%= link_to "Edit", edit_photo_path(photo) %> | 
        <%= link_to "Destroy", photo, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @photos %>

<p><%= link_to "New Photo", new_photo_path(photo) %> | <%= link_to 'Camera', '/cam' %></p>
